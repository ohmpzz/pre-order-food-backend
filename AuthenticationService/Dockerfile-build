# Stage 1 - the build process
FROM node:alpine as builder

RUN mkdir -p /usr/src/builder

WORKDIR /usr/src/builder

ARG PORT
ARG LINE_LOGIN_CHANNEL_ID
ARG LINE_LOGIN_CHANNEL_SECRET
ARG LINE_LOGIN_CALLBACK_URL
ARG MONGO_URI
ARG MONGO_USER
ARG MONGO_PASS
ARG REDIRECT_URI
ARG COOKIE_DOMAIN
ARG JWT_SECRET
ARG JWT_ADMIN_SECRET
ARG MICROSERVICE_SECRET

ENV PORT=$PORT
ENV LINE_LOGIN_CHANNEL_ID=$LINE_LOGIN_CHANNEL_ID
ENV LINE_LOGIN_CHANNEL_SECRET=$LINE_LOGIN_CHANNEL_SECRET
ENV LINE_LOGIN_CALLBACK_URL=$LINE_LOGIN_CALLBACK_URL
ENV MONGO_URI=$MONGO_URI
ENV MONGO_USER=$MONGO_USER
ENV MONGO_PASS=$MONGO_PASS
ENV REDIRECT_URI=$REDIRECT_URI
ENV COOKIE_DOMAIN=$COOKIE_DOMAIN
ENV JWT_SECRET=$JWT_SECRET
ENV JWT_ADMIN_SECRET=$JWT_ADMIN_SECRET
ENV MICROSERVICE_SECRET=$MICROSERVICE_SECRET

COPY . .

RUN yarn install
RUN yarn run build
RUN rm -rf node_modules

# Stage 2 - the production environment
FROM keymetrics/pm2:latest-alpine
LABEL author="Ohm Piromrak"

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

COPY --from=builder /usr/src/builder/build .

EXPOSE 3000

CMD ["pm2-runtime", "start", "index.js"]
